{% set content = content ?: '' %}
{% set id = id ?: '' %}
{% set baseClasses = ['modal', "dropbox-modal", 'js-modal'] %}
{%
  set normalizedClassNames = classNames is defined and classNames
  ? (classNames is iterable ? classNames : classNames|split(' '))
  : []
%}
{% set allClasses = baseClasses|merge(normalizedClassNames) %}

<div class="{{ allClasses|join(" ") }}" aria-hidden="true" data-modal-id="{{id}}">
  <div class="modal__wrapper dropbox-modal__wrapper js-modal-wrapper">
    <div class="dropbox-modal__window js-modal-window">
        {{ content }}
      </div>
    </div>
  </div>
</div>
